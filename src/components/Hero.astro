---
const personalImageAlt = "José Carlos"
import MailIcon from "@/components/icons/Mail.astro"
import LinkedInIcon from "../components/icons/LinkedIn.astro"
import SocialPill from "@/components/SocialPill.astro"

---

<div class="max-w-xl">
  <div class="flex items-center gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-24" 
      src="/JC.webp"
      alt={personalImageAlt}
    />
    <div class="flex flex-col">
      <a
        href="https://linkedin.com/in/josecahdez"
        target="_blank"
        rel="noopener"
        class="flex items-center transition md:justify-center md:hover:scale-105"
      >
       
      </a>
      <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
        José Carlos
      </h1>
      <h2 class="mt-2 text-sm lg:text-lg font-medium text-neutral-400">
        Ingeniero en Sistemas Computacionales
      </h2>
    </div>
  </div>
  <p class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300">
    Profesional con amplia experiencia en soporte técnico, desarrollo e infraestructura, especializado en proporcionar soluciones eficientes y mejorar la experiencia del usuario.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:joseca@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/josecahdez">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>

